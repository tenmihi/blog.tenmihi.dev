---
import { SITE_TITLE, GITHUB_USER_NAME, TWITTER_USER_NAME } from '../consts';
import ThemeButton from './ThemeButton.astro';
import SocialLink from './SocialLink.astro'

const socialLinks = [
  {
    brandName: 'x-twitter',
    url: `https://twitter.com/${TWITTER_USER_NAME}`,
  },
  {
    brandName: 'github',
    url: `https://github.com/${GITHUB_USER_NAME}`
  }
]
---

<header>
	<nav class="flex items-center justify-between px-8 md:my-4 my-2">
		<h2 class="m-0 text-2xl	font-bold text-slate-900 dark:text-white"><a href="/">{SITE_TITLE}</a></h2>
    <ThemeButton />
    <div class="flex gap-4 ">
      {socialLinks.map(link => (
        <SocialLink brandName={link.brandName} url={link.url} class="text-2xl"/>
      ))}
    </div>
	</nav>
  <div>
    <hr>
  </div>
</header>

<style lang="scss">
  @use '../styles/breakpoint' as breakpoint;

	nav a {
		padding: 1em 0;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}

  hr {
    margin: 0;
  }
</style>
