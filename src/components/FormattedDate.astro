---
interface Props {
	date: Date;
}

const { date: maybeDate } = Astro.props;
const date = maybeDate instanceof Date ? maybeDate : new Date(maybeDate)
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString('ja-JP', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
